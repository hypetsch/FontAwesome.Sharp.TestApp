<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">

   <Style x:Key="Style1" TargetType="Label">
      <Style.Setters>
         <Setter Property="Template">
            <Setter.Value>
               <ControlTemplate>
                  <Grid>
                      <fa:IconBlock Icon="Check" Foreground="Black" FontSize="40" />
                  </Grid>
               </ControlTemplate>
            </Setter.Value>
         </Setter>
      </Style.Setters>
   </Style>

   <Style x:Key="Style2" TargetType="Label">
      <Style.Setters>
         <Setter Property="Template">
            <Setter.Value>
               <ControlTemplate>
                  <Grid>
                     <fa:IconBlock Icon="ExclamationTriangle" Foreground="Black" FontSize="40" />
                  </Grid>
               </ControlTemplate>
            </Setter.Value>
         </Setter>
      </Style.Setters>
   </Style>

</ResourceDictionary>
